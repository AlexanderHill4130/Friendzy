<div class="card-friend">
  <div>
    <%= cl_image_tag(user.photo, height: 50, width: 50, crop: :fill, class: 'card-friend-avatar')%>
  </div>
  <div class="card-friend-name">

    <p><%= link_to "#{user.first_name} #{user.last_name}", page_path(user.id) %></p>

  </div>
  <div class="card-friend-button">
    <%= link_to "Hang out", friendships_path(:friend_id => user), :method => :post %>
  </div>
</div>
