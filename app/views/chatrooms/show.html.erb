<div class="fluid-container col-sm-10 col-sm-offset-2" style="margin-bottom: 70px;">
  <p id="notice"><%= notice %></p>
  <%#= #link_to 'Edit', edit_chatroom_path(@chatroom) %> |
  <%= link_to 'Back', place_path(@chatroom.place.id) %>
  <div class="navbar navbar-default navbar-fixed-top pt-5">
  <p>
    <strong>Name:</strong>
    <%= @chatroom.place.name %>
  </p>
  </div>
  <div data-behavior='messages'>
    <% @chatroom.messages.each do |message| %>
    <div><strong><%= message.user.username_initial%>: </strong>  <%= message.body %></div>
    <% end %>
  </div>

  <%= simple_form_for [@chatroom.place, @chatroom, Message.new], remote:true do |f| %>
    <%= f.text_area :body, rows: 1, class: "form-control", autofocus: true %>
    <%= f.button :submit, class: " btn btn-success submit-btn" %>
  <% end %>

  <div>
    user in chat:
    <ul>
      <% @chatroom.users.each do |user| %>
      <li>
        <%= user.first_name %>
        <%= link_to "Remove", place_chatroom_remove_participant_path(@chatroom.place, @chatroom, user.id), method: :delete %>
      </li>
    <% end %>
    </ul>
  </div>
  <div>
    list of friends available:
    <% @chatroom.available_nonparticipants.each do |friend| %>
    <ul>
      <li> <%= friend.first_name %> </li>
      <%= link_to "Invite", place_chatroom_add_participant_path(@chatroom.place, @chatroom, friend.id) %>
    </ul>
    <% end %>
  </div>
</div>
